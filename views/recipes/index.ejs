<%- include('../partials/header') %>


<%recipes.forEach(function(r){%>
<div class="card" style="width: 18rem;">
    <div class="card-body">

      <h5 class="card-title"><%= r.name %></h5>
      <h6 class="card-subtitle mb-2 text-muted"><%=r.ingredients%></h6>
      <p class="card-text"><%=r.procedure%></p>

      <a href="/recipes/<%=r._id%>" class="card-link">Details</a>
    </div>
  </div>
<%})%>






<%- include('../partials/footer') %>
